mpath = os.getcwd()

def usage():
     print
     print 'Usage: '+ sys.argv[0]+ ' <current release> + < comparison release > + < TauID product > + < Number of prongs >'
     print 'e.g.: ' + sys.argv[0]+ ' CMSSW_2_2_0_pre1 CMSSW_2_1_10 pftau HadronicTauOneAndThreeProng '
     print 
     return 0
   
